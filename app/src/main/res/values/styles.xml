<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom style for SearchView -->
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/search</item>
    </style>

    <!-- Custom text appearance for SearchView query hint -->
    <style name="CustomSearchViewTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>

