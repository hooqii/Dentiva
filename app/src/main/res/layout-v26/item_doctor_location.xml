<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/corner_rv"
    >

    <ImageView
        android:id="@+id/imageViewDoctor"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/doctor"
        android:contentDescription="@string/doctor_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/doctor_name"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/dark_main"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageViewDoctor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:justificationMode="inter_word"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/address"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewName"
        app:layout_constraintStart_toEndOf="@+id/imageViewDoctor"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <ImageView
        android:id="@+id/imageViewPhone"
        android:layout_width="18dp"
        android:layout_marginStart="16dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/whatsapp_fill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewDoctor"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddress" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/number"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="11sp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPhone"
        app:layout_constraintStart_toEndOf="@+id/imageViewPhone"
        app:layout_constraintTop_toTopOf="@+id/imageViewPhone" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/location"
        android:contentDescription="@string/location_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/star"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/location_icon"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRating"
        app:layout_constraintEnd_toStartOf="@+id/textViewRating"
        app:layout_constraintTop_toTopOf="@+id/textViewRating" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_light"
        android:textStyle="bold"
        android:text="@string/rating"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewPhone" />
    " />
</androidx.constraintlayout.widget.ConstraintLayout>